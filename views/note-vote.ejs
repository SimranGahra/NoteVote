<%- include("layouts/header") -%>

<div class="sitename">
    <h1>Note-Vote</h1>
</div>

<div class="box">
    <!-- Accordion for user status and logout option -->
    <div class="main1">
        <div class="accordion" id="accordionExample">
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-gear-fill" viewBox="0 0 16 16">
                            <path d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872zM8 10.93a2.929 2.929 0 1 1 0-5.86 2.929 2.929 0 0 1 0 5.858z"/>
                        </svg> 
                        <span id="username">Logged in as <%= user.username %></span>
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <div class="text-center">
                            <div class="btn-group">
                                <!-- Log Out button -->
                                <form action="/logout" method="get" class="d-flex w-100">
                                    <button type="submit" class="btn btn-primary" aria-expanded="false">Log Out</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <br><br>
    
    <div>
        <div class="main2">
            <div id="notes-container">
                <!-- Render each note with voting options -->
                <%- include("partials/note-render.ejs", { posts: posts, user: user }) %>
            </div>
    
            <!-- Field to add a new note -->
            <div class="input-group">
                <form action="/addpost" method="post" class="d-flex w-100">
                    <input type="hidden" name="user_email" value="<%= user.email %>">
                    <input type="text" name="note" class="form-control" placeholder="Enter a new note here">
                    <button type="submit" id="add-btn" class="btn btn-outline-secondary">Add</button>
                </form>
            </div>
        </div>
    </div>
    
</div>
<%- include("layouts/footer") -%>
